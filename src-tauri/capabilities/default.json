{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "mic-recorder:default",
    "shell:default",
    "shell:allow-execute",
    "core:window:allow-set-position",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "run-python-whisper",
          "cmd": "python",
          "args": ["transcribe.py", { "validator": "\\S+" }]
        }
      ]
    }
  ]
}